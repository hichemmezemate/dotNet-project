<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Gestion Demandes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Accueil</a>

            <div class="ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-success me-2" asp-controller="Demande" asp-action="Index">Formulaire</a>
                    <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">DÃ©connexion</a>
                }
                else
                {
                    <a href="/Home/Login" class="btn btn-primary">Connexion avec Microsoft</a>
                }
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>