@model Demande

<h2>Formulaire de demande</h2>

<div class="mb-3">
    <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Déconnexion</a>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Index" method="post">
    <div class="mb-3">
        <label asp-for="Nom" class="form-label"></label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email de contact (Azure AD)</label>
        <input type="text" class="form-control" value="@User.Identity?.Name" disabled />
        <small class="text-muted">Cet email sera automatiquement lié à votre demande.</small>
    </div>

    <div class="mb-3">
        <label asp-for="Objet" class="form-label"></label>
        <input asp-for="Objet" class="form-control" />
        <span asp-validation-for="Objet" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Envoyer la demande</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}